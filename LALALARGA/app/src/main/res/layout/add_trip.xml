<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f7dc"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="68dp"
        android:paddingBottom="16dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toTopOf="@+id/tripID"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="66dp"
        android:background="#c43c1e"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Trip Information"
        android:textColor="#f9f7dc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/vehID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVPersonalInfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="17dp"
        android:text="Arrival"
        android:textColor="#c43c1e"
        android:textSize="20sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toTopOf="@+id/arrDate"
        app:layout_constraintEnd_toStartOf="@+id/tripDest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deptDate" />

    <TextView
        android:id="@+id/TVPersonalInfo4"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="159dp"
        android:text="Ticket Price"
        android:textColor="#c43c1e"
        android:textSize="20sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrDate" />

    <Button
        android:id="@+id/deptTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:color="@color/black"
        android:ems="10"
        android:hint="Set time"
        android:inputType="date"
        android:minHeight="48dp"
        android:onClick="opendeptTimePicker"
        android:textColor="#c43c1e"
        app:layout_constraintBottom_toTopOf="@+id/tripDest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deptDate"
        app:layout_constraintTop_toBottomOf="@+id/tripOrig" />

    <Button
        android:id="@+id/deptDate"
        style="?android:spinnerStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="18dp"
        android:color="@color/black"
        android:textColor="#c43c1e"
        android:ems="10"
        android:hint="Set date"
        android:inputType="date"
        android:minHeight="48dp"
        android:onClick="opendeptDatePicker"
        app:layout_constraintBottom_toTopOf="@+id/TVPersonalInfo3"
        app:layout_constraintEnd_toStartOf="@+id/deptTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deptTitle" />

    <EditText
        android:id="@+id/tripDest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:hint="Destination"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#c43c1e"
        app:layout_constraintBottom_toTopOf="@+id/arrTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TVPersonalInfo3"
        app:layout_constraintTop_toBottomOf="@+id/deptTime" />

    <Spinner
        android:id="@+id/vehTypeSpin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/deptTitle"
        app:layout_constraintEnd_toStartOf="@+id/vehID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripID"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/vehID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Vehicle ID"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tripOrig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vehTypeSpin"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/tktPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hapticFeedbackEnabled="false"
        android:hint="Ticket Price"
        android:inputType="text|numberDecimal"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrTime" />

    <EditText
        android:id="@+id/tripOrig"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Origin"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/deptTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deptTitle"
        app:layout_constraintTop_toBottomOf="@+id/vehID" />

    <EditText
        android:id="@+id/tripID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"

        android:ems="10"
        android:hint="TripID"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/vehTypeSpin"
        app:layout_constraintStart_toStartOf="@+id/vehTypeSpin"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <TextView
        android:id="@+id/deptTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:text="Departure"
        android:textColor="#c43c1e"
        android:textSize="20sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toTopOf="@+id/deptDate"
        app:layout_constraintEnd_toStartOf="@+id/tripOrig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehTypeSpin" />

    <Button
        android:id="@+id/arrTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="14dp"
        android:background="?android:attr/selectableItemBackground"
        android:color="@color/black"
        android:ems="10"
        android:hint="Set time"
        android:inputType="date"
        android:minHeight="48dp"
        android:onClick="openarvTimePicker"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tktPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arrDate"
        app:layout_constraintTop_toBottomOf="@+id/tripDest" />

    <Button
        android:id="@+id/arrDate"
        style="?android:spinnerStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="31dp"
        android:color="@color/black"
        android:ems="10"
        android:hint="Set Date"
        android:inputType="date"
        android:minHeight="48dp"
        android:onClick="openarvDatePicker"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/TVPersonalInfo4"
        app:layout_constraintEnd_toStartOf="@+id/arrTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVPersonalInfo3" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="75dp"
        android:text="Add Trip"
        android:backgroundTint="#c43c1e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tktPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>